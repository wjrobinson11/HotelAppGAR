<div class="page-header">
  <%= link_to hotels_path, class: 'btn btn-default' do %>
    All Hotels
  <% end %>
  <%= link_to edit_hotel_path(@hotel), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show hotel</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @hotel.name %></dd>

  <dt>Location:</dt>
  <dd><%= @hotel.location %></dd>

  <% @hotel.room_types.each do |room_type| %>
    <dt>Room type:</dt>
    <dd><%= room_type.name %></dd>

    <dt>Room available:</dt>
    <dd><%= room_type.available ? 'Yes' : 'No' %></dd>
  <% end %>

</dl>
